+
+            if (hasMclogs()) {
+                LOGGER.info("IceCream: Using user-provided mclo.gs plugin instead of our own.");
+                return;
+            }
+
+            try {
+
+                File file = context.toFile();
+                file.getParentFile().mkdirs();
+
+                boolean shouldDownload = false;
+
+                if (!file.exists()) {
+                    shouldDownload = true;
+                }
+
+                if (shouldDownload) {
+                    URLConnection urlConnection = new URL("https://cdn.modrinth.com/data/6DdCzpTL/versions/eBwr2AoS/mclogs-bukkit-2.6.3.jar").openConnection();
+                    urlConnection.setReadTimeout(5000);
+                    urlConnection.setConnectTimeout(5000);
+                    Files.copy(urlConnection.getInputStream(), file.toPath(), StandardCopyOption.REPLACE_EXISTING);
+                }
+
+                super.registerProviders(entrypointHandler, context);
+
+            } catch (Throwable e) {
+                LOGGER.error("IceCream: Failed to download and install mclo.gs plugin", e);
+            }
+        }
+    }
+
+    private static boolean hasMclogs() {
+        for (PluginProvider<JavaPlugin> provider : LaunchEntryPointHandler.INSTANCE.get(Entrypoint.PLUGIN).getRegisteredProviders()) {
+            if (provider.getMeta().getName().equalsIgnoreCase("mclo.gs")) {
+                return true;
+            }
+        }
+        return false;
+    }
