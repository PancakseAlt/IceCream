+public class MclogsProviderSource extends FileProviderSource{
+    public static final MclogsProviderSource INSTANCE = new MclogsProviderSource();
+
+    private static final Logger LOGGER = LogUtils.getClassLogger();
+
+    public MclogsProviderSource() {
+        super("File '%s' specified by IceCream"::formatted);
+    }
+
